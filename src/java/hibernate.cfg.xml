<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/upinder?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.enable_lazy_load_no_trans">true</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping resource="upinder/modelo/Mensaje.hbm.xml"/>
    <mapping resource="upinder/modelo/TipoDenuncia.hbm.xml"/>
    <mapping resource="upinder/modelo/Denuncia.hbm.xml"/>
    <mapping resource="upinder/modelo/Interaccion.hbm.xml"/>
    <mapping resource="upinder/modelo/Foto.hbm.xml"/>
    <mapping resource="upinder/modelo/Titulacion.hbm.xml"/>
    <mapping resource="upinder/modelo/Notificacion.hbm.xml"/>
    <mapping resource="upinder/modelo/Comentario.hbm.xml"/>
    <mapping resource="upinder/modelo/Usuario.hbm.xml"/>
    <mapping resource="upinder/modelo/Reaccion.hbm.xml"/>
    <mapping resource="upinder/modelo/Match.hbm.xml"/>
    <mapping resource="upinder/modelo/TipoSexo.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
